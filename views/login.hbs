<div class="w-full flex h-screen">
  <div class="flex w-1/2 justify-center items-center">
    <div class="w-3/4 py-10 px-20 rounded-box">
      <h1 class="text-3xl mb-5 text-white">Log In</h1>
      <form
        class="w-full flex flex-col gap-3"
        action="/login"
        method="post"
        role="form"
        autocomplete="off"
      >
        <input
          id="nombre"
          name="username"
          placeholder="Your username"
          class="input input-bordered w-full bg-inherit"
          type="text"
          required
        />
        <input
          id="password"
          name="password"
          placeholder="Your password"
          class="input input-bordered w-full bg-inherit"
          type="password"
          required
        />
        <input class="btn btn-secondary" type="submit" value="Log in" />
      </form>
      <div class="divider"></div>
      <div class="w-full">
        <input
          class="btn btn-primary w-full"
          onclick="location.href = '/signup'"
          value="Create new account"
        />
      </div>
    </div>
  </div>
  <div class="divider divider-horizontal py-20"></div>
  <div class="flex w-1/2">
    <div
      class="w-full h-screen bg-black text-3xl text-white flex justify-center items-center"
    >
      <div class="mr-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="w-7 h-7"
        >
          <path
            d="M3.478 2.405a.75.75 0 00-.926.94l2.432 7.905H13.5a.75.75 0 010 1.5H4.984l-2.432 7.905a.75.75 0 00.926.94 60.519 60.519 0 0018.445-8.986.75.75 0 000-1.218A60.517 60.517 0 003.478 2.405z"
          ></path>
        </svg>

      </div>
      <p class="font-light">Bornoz</p>
      <p class="font-semibold">Fly</p>
    </div>
  </div>
</div>