<div class="w-full flex h-screen">
  <div class="flex w-1/2 justify-center items-center">
    <div class="w-full bg-gray-800 py-10 px-20 rounded-box">
      <h1 class="text-3xl mb-5 text-white">Log In</h1>
      <form
        class="w-full flex flex-col gap-3"
        action="/login"
        method="post"
        role="form"
        autocomplete="off"
      >
        <input
          id="nombre"
          name="username"
          placeholder="Your username"
          class="input input-bordered w-full"
          type="text"
          required
        />
        <input
          id="password"
          name="password"
          placeholder="Your password"
          class="input input-bordered w-full"
          type="password"
          required
        />
        <input class="btn btn-secondary" type="submit" value="Log in" />
      </form>
      <div class="divider"></div>
      <div class="w-full">
        <input
          class="btn btn-primary w-full"
          onclick="location.href = '/signup'"
          value="Create new account"
        />
      </div>
    </div>
  </div>
  <div class="flex w-1/2 justify-center items-center">
    <div class="w-full h-screen bg-black text-3xl text-white">
      <h2 class="">Bornoz</h2>
      <h2 class="">Fly</h2>
    </div>
  </div>
</div>