<div class="flex justify-center">
  <div class="sm:m-10 w-full sm:w-3/4 bg-gray-800 p-5 pt-20 sm:p-10 rounded-box h-screen sm:h-fit">
    <!--WELCOME-->
    <section>
      <div class="flex justify-between mb-10">
        <h1 class="text-3xl mb-5 text-white">Hi {{username}}.</h1>
        <input
          class="btn bg-red-600 hover:bg-red-500 text-white px-0"
          onclick="location.href = '/logout'"
          value="Logout"
        />
      </div>
    </section>
    <!--FIN WELCOME-->
    <!--PRODUCTOS FORM / TABLE-->
    <section class="text-white">
      <h2 class="text-2xl">Products</h2>
      <div class="form-control flex gap-3">
        <div>
          <label class="label">
            <span class="label-text">Product name</span>
          </label>
          <label class="input-group">
            <span>Name</span>
            <input
              type="text"
              placeholder="Book"
              class="input input-bordered"
            />
          </label>
        </div>
        <div>
          <label class="label">
            <span class="label-text">Enter amount</span>
          </label>
          <label class="input-group">
            <span>Price</span>
            <input
              type="number"
              placeholder="10"
              class="input input-bordered"
            />
          </label>
        </div>
        <div>
          <label class="label">
            <span class="label-text">Thumbnail URL</span>
          </label>
          <label class="input-group">
            <span>URL</span>
            <input
              type="text"
              placeholder="https://smartmobilestudio.com/wp-content/uploads/2012/06/leather-book-preview.png"
              class="input input-bordered"
            />
          </label>
        </div>
        <div class="flex">
          <input
            class="btn btn-success"
            value="Submit"
          />
        </div>
      </div>
      <div class="overflow-x-auto">
        <table class="table table-compact sm:table-normal w-full my-5 text-center">
          <!-- head -->
          <thead class="text-white">
            <tr>
              <th>Name</th>
              <th>Price</th>
              <th>Picture</th>
            </tr>
          </thead>
          <tbody>
            <!-- row 1 -->
            <tr class="hover text-white">
              <td>Cy Ganderton</td>
              <td><span
                  class="px-2 py-1 font-semibold rounded-box bg-amber-900 text-yellow-400"
                >$23400</span></td>
              <td class="flex justify-center">
                <div class="flex justify-center items-center w-40 h-20">
                  <img
                    class="w-1/3"
                    src="https://smartmobilestudio.com/wp-content/uploads/2012/06/leather-book-preview.png"
                    alt="Book"
                  />
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </section>
    <!--FIN PRODUCTOS FORM / TABLE-->
    <!--COMIENZA CHAT FORM / DISPLAY-->
    <!--TERMINA CHAT FORM / DISPLAY-->
  </div>
</div>